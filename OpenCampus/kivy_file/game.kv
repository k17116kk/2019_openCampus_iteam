<Game>:

    Widget:
        on_size: root.Size_Change()

    Label:
        canvas.before:
            Color:
                rgba: 1,1,1,1
            Rectangle:
                pos: 0,1
                size: self.size

    Label:
        id: la2
        pos_hint: {"center_x":0.835,"center_y":0.85}
        text:   "これを組み立てよう！！"
        color:  1.000 ,0.6078 ,0.000, 1,0
        font_size: 50


    Camera:
        pos_hint: {"center_x":0.335,"center_y":0.57}
        id: Camera
        index: 1
        size_hint : 0.7, 0.432
        resolution: (1920, 1080)
        play: True

    # Image:
    #     source: "./data/setsumei2.jpg"
    #     pos_hint: {"center_x":0.835,"center_y":0.85}
    #     size_hint: 0.3, 0.37

    Image:
        source: "./data/odai1.jpg"
        pos_hint: {"center_x":0.835,"center_y":0.55}
        size_hint: 0.3, 0.4

    Button:
        id: btn1
        pos_hint: {"center_x":0.5,"center_y":0.1}
        text:   "かんせい！"
        background_color: (2.9, 0.3, 0, 0.9)
        font_size:  40
        size_hint: 0.39, 0.13
        on_press: root.button_press(app.root)
        on_press: root.export_to_png('./data/tsumiki.png')
        on_press: app.root.change_disp_hantei()

    Label:
        id:clock
        pos_hint: {"center_x":0.335,"center_y":0.85}
        text:   "0:00:00"
        color:  1.000 ,0.6078 ,0.000, 1,0
        font_size: 50